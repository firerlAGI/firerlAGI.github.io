---
import LanguageSwitcher from '../react/LanguageSwitcher'

interface Props {
  class?: string
}

const { class: className = '' } = Astro.props

<nav class={`navbar ${className}`}>
  <a href="#" class="navbar-logo">F<span class="logo-accent">IR</span>ER<span class="logo-accent">LA</span>GI</a>
  
  <div class="nav-links">
    <a href="#about" class="nav-link">/ABOUT</a>
    <a href="#skills" class="nav-link">/ACTIVITY</a>
    <a href="#projects" class="nav-link">/PROJECTS</a>
    <a href="#blog" class="nav-link">/LOGS</a>
    <a href="#contact" class="nav-link">/CONTACT</a>
  </div>
  
  <div class="nav-actions">
    <div class="language-toggle">
      <LanguageSwitcher client:idle />
    </div>
    <button class="mobile-menu-toggle" aria-label="打开菜单" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<div class="mobile-menu">
  <div class="mobile-menu-content">
    <a href="#about" class="mobile-nav-link">/ABOUT</a>
    <a href="#skills" class="mobile-nav-link">/ACTIVITY</a>
    <a href="#projects" class="mobile-nav-link">/PROJECTS</a>
    <a href="#blog" class="mobile-nav-link">/LOGS</a>
    <a href="#contact" class="mobile-nav-link">/CONTACT</a>
  </div>
</div>

<script>
  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
  
  function toggleMobileMenu() {
    const isOpen = mobileMenu?.classList.contains('open');
    mobileMenuToggle?.classList.toggle('active');
    mobileMenu?.classList.toggle('open');
    mobileMenuToggle?.setAttribute('aria-expanded', (!isOpen).toString());
    document.body.style.overflow = isOpen ? '' : 'hidden';
  }
  
  mobileMenuToggle?.addEventListener('click', toggleMobileMenu);
  
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', toggleMobileMenu);
  });
  
  window.addEventListener('scroll', () => {
    const navbar = document.querySelector('.navbar');
    if (window.scrollY > 10) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }
  });
  
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>

<style>
  :global(.navbar) {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 64px;
    background: rgba(5, 5, 5, 0.5);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24px;
    z-index: 1000;
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  :global(.navbar.scrolled) {
    background: rgba(5, 5, 5, 0.9);
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.1);
  }
  
  :global(.navbar-logo) {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    text-decoration: none;
    font-family: 'Orbitron', sans-serif;
    letter-spacing: 0.1em;
    transition: all 0.25s cubic-bezier(0.25, 0.1, 0.25, 1);
  }
  
  :global(.logo-accent) {
    color: #00ffff;
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }
  
  :global(.nav-links) {
    display: flex;
    gap: 32px;
  }
  
  :global(.nav-link) {
    font-size: 0.875rem;
    color: #9ca3af;
    text-decoration: none;
    position: relative;
    transition: all 0.25s cubic-bezier(0.25, 0.1, 0.25, 1);
    font-family: 'JetBrains Mono', monospace;
    letter-spacing: 0.1em;
  }
  
  :global(.nav-link:hover) {
    color: #00ffff;
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }
  
  :global(.nav-actions) {
    display: flex;
    gap: 16px;
    align-items: center;
  }
  
  :global(.language-toggle) {
    display: none;
  }
  
  @media (min-width: 769px) {
    :global(.language-toggle) {
      display: block;
    }
  }
  
  :global(.mobile-menu-toggle) {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }
  
  :global(.mobile-menu-toggle span) {
    width: 100%;
    height: 2px;
    background: #00ffff;
    border-radius: 2px;
    transition: all 0.3s;
    box-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
  }
  
  :global(.mobile-menu-toggle.active span:nth-child(1)) {
    transform: rotate(45deg) translate(5px, 5px);
    background: #ff00ff;
    box-shadow: 0 0 5px rgba(255, 0, 255, 0.3);
  }
  
  :global(.mobile-menu-toggle.active span:nth-child(2)) {
    opacity: 0;
  }
  
  :global(.mobile-menu-toggle.active span:nth-child(3)) {
    transform: rotate(-45deg) translate(5px, -5px);
    background: #ff00ff;
    box-shadow: 0 0 5px rgba(255, 0, 255, 0.3);
  }
  
  :global(.mobile-menu) {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(5, 5, 5, 0.95);
    backdrop-filter: blur(20px);
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
    border-left: 1px solid rgba(0, 255, 255, 0.3);
  }
  
  :global(.mobile-menu.open) {
    transform: translateX(0);
  }
  
  :global(.mobile-menu-content) {
    display: flex;
    flex-direction: column;
    gap: 48px;
    align-items: center;
  }
  
  :global(.mobile-nav-link) {
    font-size: 2rem;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.2s;
    font-family: 'Orbitron', sans-serif;
    letter-spacing: 0.1em;
  }
  
  :global(.mobile-nav-link:hover) {
    color: #00ffff;
    text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
  }
  
  @media (max-width: 768px) {
    :global(.nav-links) {
      display: none;
    }
    
    :global(.mobile-menu-toggle) {
      display: flex;
    }
  }
</style>
