<script>
  // ‰∏ªÈ¢òÂàáÊç¢
  const themeToggle = document.getElementById('themeToggle');
  const html = document.documentElement;
  
  function toggleTheme() {
    const currentTheme = html.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    html.setAttribute('data-theme', newTheme);
    try {
      localStorage.setItem('theme', newTheme);
    } catch (e) {
      console.warn('Êó†Ê≥ï‰øùÂ≠ò‰∏ªÈ¢òËÆæÁΩÆ');
    }
  }
  
  themeToggle?.addEventListener('click', toggleTheme);
  
  // ÁßªÂä®Á´ØËèúÂçï
  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
  
  function toggleMobileMenu() {
    const isOpen = mobileMenu?.classList.contains('open');
    mobileMenuToggle?.classList.toggle('active');
    mobileMenu?.classList.toggle('open');
    mobileMenuToggle?.setAttribute('aria-expanded', (!isOpen).toString());
    document.body.style.overflow = isOpen ? '' : 'hidden';
  }
  
  mobileMenuToggle?.addEventListener('click', toggleMobileMenu);
  
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', toggleMobileMenu);
  });
  
  // ÊªöÂä®Êó∂Ê∑ªÂä†Èò¥ÂΩ±
  const navbar = document.querySelector('.navbar');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }
  });
  
  // Âπ≥ÊªëÊªöÂä®
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>

<style>
  :global(.navbar) {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 52px;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 max(48px, 5vw);
    z-index: 1000;
    transition: background-color 0.35s cubic-bezier(0.4, 0, 0.2, 1),
                border-color 0.35s cubic-bezier(0.4, 0, 0.2, 1),
                box-shadow 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  :global(html[data-theme="dark"] .navbar) {
    background: rgba(28, 28, 30, 0.72);
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  :global(.navbar.scrolled) {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }
  
  :global(html[data-theme="dark"] .navbar.scrolled) {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  
  :global(.navbar-logo) {
    font-size: 1.9rem;
    font-weight: 600;
    color: #1D1D1F;
    text-decoration: none;
    transition: color 0.25s cubic-bezier(0.25, 0.1, 0.25, 1);
  }
  
  :global(html[data-theme="dark"] .navbar-logo) {
    color: #F5F5F7;
  }
  
  :global(.navbar-logo:hover) {
    color: #007AFF;
  }
  
  :global(html[data-theme="dark"] .navbar-logo:hover) {
    color: #0A84FF;
  }
  
  :global(.nav-links) {
    display: flex;
    gap: 48px;
  }
  
  :global(.nav-link) {
    font-size: 1.2rem;
    color: #1D1D1F;
    text-decoration: none;
    position: relative;
    transition: color 0.25s cubic-bezier(0.25, 0.1, 0.25, 1);
  }
  
  :global(html[data-theme="dark"] .nav-link) {
    color: #F5F5F7;
  }
  
  :global(.nav-link::after) {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    width: 0;
    height: 2px;
    background: #007AFF;
    transition: width 0.35s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
  }
  
  :global(html[data-theme="dark"] .nav-link::after) {
    background: #0A84FF;
  }
  
  :global(.nav-link:hover) {
    color: #007AFF;
  }
  
  :global(html[data-theme="dark"] .nav-link:hover) {
    color: #0A84FF;
  }
  
  :global(.nav-link:hover::after) {
    width: 100%;
  }
  
  :global(.nav-actions) {
    display: flex;
    gap: 16px;
    align-items: center;
  }
  
  :global(.lang-toggle) {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2px;
    transition: background-color 0.25s cubic-bezier(0.25, 0.1, 0.25, 1),
                transform 0.15s cubic-bezier(0.4, 0, 0.2, 1);
    color: #1D1D1F;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0;
  }
  
  :global(html[data-theme="dark"] .lang-toggle) {
    color: #F5F5F7;
  }
  
  :global(.lang-toggle:hover) {
    background: rgba(0, 0, 0, 0.05);
  }
  
  :global(html[data-theme="dark"] .lang-toggle:hover) {
    background: rgba(255, 255, 255, 0.1);
  }
  
  :global(.lang-toggle:active) {
    transform: scale(0.96);
    transition-duration: 0.15s;
  }
  
  :global(.lang-current) {
    color: #007AFF;
    font-weight: 600;
  }
  
  :global(html[data-theme="dark"] .lang-current) {
    color: #0A84FF;
  }
  
  :global(.lang-separator) {
    color: #C7C7CC;
    opacity: 0.6;
  }
  
  :global(.lang-next) {
    color: #86868B;
  }
  
  :global(.theme-toggle) {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.25s cubic-bezier(0.25, 0.1, 0.25, 1),
                transform 0.15s cubic-bezier(0.4, 0, 0.2, 1);
    color: #1D1D1F;
    font-size: 1.4rem;
  }
  
  :global(html[data-theme="dark"] .theme-toggle) {
    color: #F5F5F7;
  }
  
  :global(.theme-toggle:hover) {
    background: rgba(0, 0, 0, 0.05);
  }
  
  :global(html[data-theme="dark"] .theme-toggle:hover) {
    background: rgba(255, 255, 255, 0.1);
  }
  
  :global(.theme-toggle:active) {
    transform: scale(0.96);
    transition-duration: 0.15s;
  }
  
  :global(.theme-toggle .icon-sun) {
    display: block;
  }
  
  :global(.theme-toggle .icon-moon) {
    display: none;
  }
  
  :global(html[data-theme="dark"] .theme-toggle .icon-sun) {
    display: none;
  }
  
  :global(html[data-theme="dark"] .theme-toggle .icon-moon) {
    display: block;
  }
  
  :global(.mobile-menu-toggle) {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }
  
  :global(.mobile-menu-toggle span) {
    width: 100%;
    height: 2px;
    background: #1D1D1F;
    border-radius: 2px;
    transition: transform 0.3s, opacity 0.3s;
  }
  
  :global(html[data-theme="dark"] .mobile-menu-toggle span) {
    background: #F5F5F7;
  }
  
  :global(.mobile-menu-toggle.active span:nth-child(1)) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  :global(.mobile-menu-toggle.active span:nth-child(2)) {
    opacity: 0;
  }
  
  :global(.mobile-menu-toggle.active span:nth-child(3)) {
    transform: rotate(-45deg) translate(5px, -5px);
  }
  
  :global(.mobile-menu) {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #FFFFFF;
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  :global(html[data-theme="dark"] .mobile-menu) {
    background: #000000;
  }
  
  :global(.mobile-menu.open) {
    transform: translateX(0);
  }
  
  :global(.mobile-menu-content) {
    display: flex;
    flex-direction: column;
    gap: 32px;
    align-items: center;
  }
  
  :global(.mobile-nav-link) {
    font-size: 2rem;
    color: #1D1D1F;
    text-decoration: none;
    transition: color 0.2s;
  }
  
  :global(html[data-theme="dark"] .mobile-nav-link) {
    color: #F5F5F7;
  }
  
  :global(.mobile-nav-link:hover) {
    color: #007AFF;
  }
  
  :global(html[data-theme="dark"] .mobile-nav-link:hover) {
    color: #0A84FF;
  }
  
  @media (max-width: 768px) {
    :global(.nav-links) {
      display: none;
    }
    
    :global(.mobile-menu-toggle) {
      display: flex;
    }
  }
</style>
