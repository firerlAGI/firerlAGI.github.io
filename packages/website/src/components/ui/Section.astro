---
interface Props {
  sectionId?: string
  class?: string
  alt?: boolean
}

const { sectionId, class: className = '', alt = false } = Astro.props
---

<section id={sectionId} class={`section w-full flex flex-col items-center ${alt ? 'section-alt' : ''} ${className}`}>
  <slot />
</section>

<style>
  :global(.section) {
    /* padding is handled by utility classes now, defaults provided in usage */
    transition: background-color 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  :global(.section-alt) {
    background: var(--cyber-dark);
  }
</style>
