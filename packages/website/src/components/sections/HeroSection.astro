---
import Container from '../ui/Container.astro'
import Button from '../ui/Button.astro'
---

<section class="hero">
  <video class="hero-video" autoplay muted loop playsinline>
    <source src="/assets/images/hero-bg.mp4" type="video/mp4">
  </video>
  
  <div class="hero-content">
    <h1 class="hero-title">
      <span class="hero-title-main">计算为了</span>
      <span class="hero-title-accent">无法计算的价值</span>
    </h1>
    
    <p class="hero-subtitle">
      探索 AI、知识管理与创造力边界的个人作品集
    </p>
    
    <div class="hero-cta">
      <Button href="#projects" variant="primary">浏览项目</Button>
      <Button href="#contact" variant="secondary">联系我</Button>
    </div>
  </div>
  
  <div class="hero-scroll-indicator">
    ↓
  </div>
</section>

<style>
  :global(.hero) {
    min-height: 90vh;
    position: relative;
    animation: heroEnter 0.75s cubic-bezier(0, 0, 0.2, 1) forwards;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  :global(.hero-video) {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translateX(-50%) translateY(-50%);
    z-index: 0;
    object-fit: cover;
  }
  
  @keyframes heroEnter {
    0% {
      opacity: 0;
      transform: scale(1.02);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  :global(.hero::before) {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
    animation: fadeIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.3s forwards;
    z-index: 1;
  }
  
  @keyframes fadeIn {
    to {
      background: rgba(0, 0, 0, 0.3);
    }
  }
  
  :global(.hero-content) {
    text-align: center;
    z-index: 1;
    padding: 0 20px;
    max-width: 900px;
    position: relative;
  }
  
  :global(.hero-title) {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 32px;
    display: flex;
    flex-direction: column;
    animation: fadeInUp 1s cubic-bezier(0, 0, 0.2, 1) 0.2s both;
  }
  
  :global(.hero-title-main) {
    color: #1D1D1F;
  }
  
  :global(html[data-theme="dark"] .hero-title-main) {
    color: #F5F5F7;
  }
  
  :global(.hero-title-accent) {
    background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  :global(.hero-subtitle) {
    font-size: 2rem;
    color: #86868B;
    margin-bottom: 48px;
    line-height: 1.5;
    animation: fadeInUp 1s cubic-bezier(0, 0, 0.2, 1) 0.4s both;
  }
  
  :global(.hero-cta) {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 1s cubic-bezier(0, 0, 0.2, 1) 0.6s both;
  }
  
  :global(.hero-scroll-indicator) {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    color: #86868B;
    animation: bounce 2s infinite;
    z-index: 1;
    font-size: 2rem;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    :global(.hero-title) {
      font-size: 3rem;
    }
    
    :global(.hero-subtitle) {
      font-size: 1.5rem;
    }
    
    :global(.hero-cta) {
      flex-direction: column;
      width: 100%;
    }
    
    :global(.hero-cta .btn) {
      width: 100%;
    }
  }
</style>
