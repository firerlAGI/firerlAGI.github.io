---
import Container from '../ui/Container.astro'
import Section from '../ui/Section.astro'
import CyberCard from '../ui/CyberCard.astro'
import GlitchText from '../ui/GlitchText.astro'
import { projects } from '../../data/projects'
---

<Section id="projects" class="py-20 px-4">
  <Container class="max-w-7xl mx-auto">
    <div class="mb-12 flex flex-col items-end text-right">
      <GlitchText text="DEPLOYED MODULES" as="h2" className="text-4xl md:text-5xl font-bold text-white mb-4" />
      <div class="h-1 w-24 bg-cyan-500" />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <CyberCard key={project.title} className="h-full flex flex-col" glowColor={index % 2 === 0 ? 'pink' : 'cyan'}>
          {project.image && (
            <div class="relative mb-4 overflow-hidden group-hover:border-b border-cyan-500/50">
              <img 
                src={project.image} 
                alt={project.title} 
                loading="lazy"
                class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110 filter grayscale group-hover:grayscale-0"
              />
              <div class="absolute inset-0 bg-cyan-500/20 mix-blend-overlay opacity-0 group-hover:opacity-100 transition-opacity" />
            </div>
          )}
          
          <h3 class={`text-2xl font-cyber ${index % 2 === 0 ? 'text-fuchsia-400' : 'text-cyan-400'} mb-2`}>{project.title}</h3>
          <p class="text-gray-400 mb-4 flex-grow text-sm leading-relaxed">{project.description}</p>
          
          {project.techBadges && (
            <div class="flex flex-wrap gap-2 mb-6">
              {project.techBadges.map(tech => (
                <span key={tech} class="px-2 py-1 text-xs border border-gray-600 text-gray-300 font-mono bg-black/50">
                  {tech}
                </span>
              ))}
            </div>
          )}

          <div class="flex gap-4 mt-auto pt-4 border-t border-gray-800">
            {project.ctaHref && (
              <a href={project.ctaHref} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-cyan-400 hover:text-white transition-colors text-sm font-mono">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                  <path d="M9 18c-4.51 2-5-2-7-2"/>
                </svg>
                CODE
              </a>
            )}
            {project.cta && (
              <a href={project.ctaHref} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-fuchsia-400 hover:text-white transition-colors text-sm font-mono">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                DEMO
              </a>
            )}
          </div>
        </CyberCard>
      ))}
    </div>
  </Container>
</Section>
