---
import Container from '../ui/Container.astro'
import Card from '../ui/Card.astro'
import Section from '../ui/Section.astro'
import { projects } from '../../data/projects'
---

<Section id="projects" alt={true}>
  <Container>
    <h2 class="section-title animate-on-scroll">精选项目</h2>
    
    <div class="projects-grid">
      {projects.map(project => (
        <Card
          size={project.size}
          icon={project.icon}
          title={project.title}
          description={project.description}
          image={project.image}
          techBadges={project.techBadges}
          cta={project.cta}
          ctaHref={project.ctaHref}
          class="animate-on-scroll"
        />
      ))}
    </div>
  </Container>
</Section>

<style>
  :global(.section-title) {
    font-size: 3.2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 48px;
    letter-spacing: -0.015em;
    line-height: 1.2;
    color: #1D1D1F;
  }
  
  :global(html[data-theme="dark"] .section-title) {
    color: #F5F5F7;
  }
  
  :global(.projects-grid) {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 24px;
  }
</style>
