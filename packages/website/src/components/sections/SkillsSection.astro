---
import Container from '../ui/Container.astro'
import Section from '../ui/Section.astro'
import CyberCard from '../ui/CyberCard.astro'
import GlitchText from '../ui/GlitchText.astro'
import { Activity as ActivityIcon, GitCommit, Code, Calendar as CalendarIcon } from 'lucide-react'
import { translations } from '../../translations'

type Language = 'en' | 'zh'

// 获取数据
interface Activity {
  date: string
  count: number
  level: 0 | 1 | 2 | 3 | 4
}

interface Stats {
  loc: number
  days: number
  contribs: number
}

interface ContributionData {
  data: Activity[]
  stats: Stats
  updatedAt?: string
}

let data: Activity[] = []
let stats: Stats = { loc: 0, days: 0, contribs: 0 }
let loading = true
let error = false

// 从GitHub API获取真实的贡献数据
try {
  const apiUrl = 'http://localhost:4321/api/github-contributions.json'
  const response = await fetch(apiUrl, {
    headers: {
      'Accept': 'application/json',
    },
  })

  if (response.ok) {
    const result: ContributionData = await response.json()
    if (result.data && Array.isArray(result.data) && result.stats) {
      data = result.data
      stats = result.stats
      loading = false
    } else {
      console.warn('Invalid response format:', result)
      loading = false
      error = true
    }
  } else {
    console.warn('Failed to fetch GitHub contributions, status:', response.status)
    loading = false
    error = true
  }
} catch (e) {
  console.warn('Error fetching GitHub contributions:', e)
  loading = false
  error = true
}

const lang: Language = 'en'
const t = translations[lang]
---

<Section sectionId="skills" class="py-20 px-4">
  <Container class="max-w-[1400px] mx-auto">
    <div class="mb-12">
      <GlitchText text={t.skills.title} tag="h2" class="text-4xl md:text-5xl font-bold text-white mb-4" />
      <div class="h-1 w-24 bg-fuchsia-500" />
    </div>

    <CyberCard glowColor="cyan" class="p-0 overflow-hidden">
      <!-- Dashboard Header -->
      <div class="bg-cyan-950/30 border-b border-cyan-500/30 p-6 flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="flex items-center gap-3">
          <ActivityIcon size={24} class="text-cyan-400 animate-pulse" />
          <h3 class="text-xl font-cyber text-cyan-100 tracking-widest">{t.skills.sync} // DASHBOARD</h3>
        </div>
        <div class="flex gap-4 text-xs font-mono text-cyan-600">
          <span class="px-2 py-1 bg-cyan-900/20 border border-cyan-800 rounded">{t.skills.status}</span>
          <span class="px-2 py-1 bg-cyan-900/20 border border-cyan-800 rounded">{t.skills.latency}</span>
        </div>
      </div>

      <!-- Dashboard Content -->
      <div class="p-6 md:p-8">
        <div class="flex flex-col xl:flex-row gap-8">
          <!-- Left: Heatmap Section -->
          <div class="flex-grow xl:w-2/3">
            <div class="flex justify-between items-center mb-6">
              <span class="font-mono text-sm text-fuchsia-400 flex items-center gap-2">
                <GitCommit size={16} /> {t.skills.github}
              </span>
              <span class="text-xs font-mono text-gray-500">{t.skills.quarter}</span>
            </div>
            
            <div class="w-full overflow-x-auto pb-3 custom-scrollbar">
              {loading ? (
                <div class="h-40 w-full flex flex-col items-center justify-center font-mono text-cyan-500/50">
                  <ActivityIcon class="animate-spin mb-2" />
                  LOADING DATA STREAM...
                </div>
              ) : error ? (
                <div class="h-40 w-full flex flex-col items-center justify-center font-mono text-red-400/50">
                  <div class="text-sm">CONNECTION ERROR</div>
                  <div class="text-xs mt-2">Unable to fetch GitHub data</div>
                </div>
              ) : data.length === 0 ? (
                <div class="h-40 w-full flex flex-col items-center justify-center font-mono text-gray-500/50">
                  <div class="text-sm">NO DATA</div>
                  <div class="text-xs mt-2">No contributions found</div>
                </div>
              ) : (
                <div class="activity-calendar" id="activity-calendar"></div>
              )}
            </div>
          </div>

          <!-- Right: Stats Grid -->
          <div class="xl:w-1/3 flex flex-col justify-between gap-4 border-t xl:border-t-0 xl:border-l border-cyan-900/50 pt-8 xl:pt-0 xl:pl-8">
            <div class="grid grid-cols-1 sm:grid-cols-3 xl:grid-cols-1 gap-4 h-full">
              <!-- LOC Stat -->
              <div class="bg-black/40 border border-fuchsia-500/20 p-4 rounded hover:bg-fuchsia-900/10 transition-colors group relative overflow-hidden">
                <div class="absolute right-2 top-2 opacity-20 group-hover:opacity-100 transition-opacity">
                  <Code size={16} class="text-fuchsia-400" />
                </div>
                <div class="text-3xl font-cyber text-white mb-1 group-hover:text-fuchsia-300 transition-colors">
                  {loading ? '...' : stats.loc.toLocaleString()}
                </div>
                <div class="text-[10px] font-mono text-fuchsia-500/70 tracking-widest uppercase">
                  {t.skills.loc}
                </div>
                <div class="absolute bottom-0 left-0 h-[2px] bg-fuchsia-500 w-0 group-hover:w-full transition-all duration-500" />
              </div>

              <!-- Active Days Stat -->
              <div class="bg-black/40 border border-cyan-500/20 p-4 rounded hover:bg-cyan-900/10 transition-colors group relative overflow-hidden">
                <div class="absolute right-2 top-2 opacity-20 group-hover:opacity-100 transition-opacity">
                  <CalendarIcon size={16} class="text-cyan-400" />
                </div>
                <div class="text-3xl font-cyber text-white mb-1 group-hover:text-cyan-300 transition-colors">
                  {loading ? '...' : stats.days}
                </div>
                <div class="text-[10px] font-mono text-cyan-500/70 tracking-widest uppercase">
                  {t.skills.activeDays}
                </div>
                <div class="absolute bottom-0 left-0 h-[2px] bg-cyan-500 w-0 group-hover:w-full transition-all duration-500" />
              </div>

              <!-- Contributions Stat -->
              <div class="bg-black/40 border border-cyan-500/20 p-4 rounded hover:bg-cyan-900/10 transition-colors group relative overflow-hidden">
                <div class="absolute right-2 top-2 opacity-20 group-hover:opacity-100 transition-opacity">
                  <GitCommit size={16} class="text-white" />
                </div>
                <div class="text-3xl font-cyber text-cyan-200 mb-1 group-hover:text-white transition-colors">
                  {loading ? '...' : stats.contribs.toLocaleString()}
                </div>
                <div class="text-[10px] font-mono text-gray-400 tracking-widest uppercase">
                  {t.skills.contribs}
                </div>
                <div class="absolute bottom-0 left-0 h-[2px] bg-white w-0 group-hover:w-full transition-all duration-500" />
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Footer Detail -->
      <div class="bg-black/50 p-2 border-t border-cyan-900/50 flex justify-between items-center text-[10px] font-mono text-gray-600 px-6">
        <span>ID: {Math.random().toString(36).substring(7).toUpperCase()}</span>
        <span>{t.skills.secure}</span>
      </div>
    </CyberCard>
  </Container>
</Section>

<script define:vars={{ data, lang }}>
  const renderCalendar = () => {
    const calendarContainer = document.getElementById('activity-calendar')
    if (calendarContainer && data.length > 0) {
      const theme = {
        0: '#0f172a',
        1: '#064e3b',
        2: '#059669',
        3: '#10b981',
        4: '#34d399',
      }
      
      const weeks = []
      let currentWeek = []
      let currentDayOfWeek = new Date(data[0].date).getDay()
      
      const startOffset = currentDayOfWeek
      for (let i = 0; i < startOffset; i++) {
        currentWeek.push(null)
      }
      
      data.forEach((day) => {
        currentWeek.push(day)
        const dayOfWeek = new Date(day.date).getDay()
        if (dayOfWeek === 6) {
          weeks.push(currentWeek)
          currentWeek = []
        }
      })
      
      if (currentWeek.length > 0) {
        weeks.push(currentWeek)
      }
      
      let calendarHTML = '<div class="activity-calendar-grid" style="display: flex; flex-direction: column; gap: 8px;">'
      
      const dayLabels = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat']
      calendarHTML += '<div class="activity-weekdays" style="display: flex; gap: 4px; margin-left: 32px;">'
      dayLabels.forEach(day => {
        calendarHTML += `<div class="activity-day-label">${day}</div>`
      })
      calendarHTML += '</div>'
      
      calendarHTML += '<div class="activity-weeks" style="display: flex; gap: 4px;">'
      weeks.forEach(week => {
        calendarHTML += '<div class="activity-week" style="display: flex; flex-direction: column; gap: 4px;">'
        week.forEach(day => {
          if (day) {
            calendarHTML += `
              <div 
                class="activity-day level-${day.level}" 
                title="${day.date}: ${day.count} contributions"
                style="background-color: ${theme[day.level]}; width: var(--activity-cell-size); height: var(--activity-cell-size); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 2px;"
              ></div>
            `
          } else {
            calendarHTML += '<div class="activity-day empty" style="width: var(--activity-cell-size); height: var(--activity-cell-size); border: 1px solid rgba(255, 255, 255, 0.05); border-radius: 2px;"></div>'
          }
        })
        calendarHTML += '</div>'
      })
      calendarHTML += '</div>'
      
      const offlineLabel = lang === 'zh' ? '离线' : 'OFFLINE'
      const maxLoadLabel = lang === 'zh' ? '最大负载' : 'MAX_LOAD'
      
      calendarHTML += `
        <div class="activity-legend" style="display: flex; align-items: center; justify-content: flex-end; gap: 4px; margin-top: 8px;">
          <span class="legend-label" data-i18n="skills.offline">${offlineLabel}</span>
          <div class="legend-colors" style="display: flex; gap: 2px;">
            ${[0, 1, 2, 3, 4].map(level => `
              <div 
                class="legend-color" 
                style="background-color: ${theme[level]}; width: var(--activity-legend-size); height: var(--activity-legend-size);"
              ></div>
            `).join('')}
          </div>
          <span class="legend-label" data-i18n="skills.maxLoad">${maxLoadLabel}</span>
        </div>
      `
      
      calendarHTML += '</div>'
      calendarContainer.innerHTML = calendarHTML
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', renderCalendar)
  } else {
    renderCalendar()
  }
</script>

<style>
  .activity-calendar {
    width: 100%;
    min-width: 720px;
    --activity-cell-size: 48px;
    --activity-legend-size: 36px;
  }
  
  .activity-calendar-grid {
    display: flex !important;
    flex-direction: column !important;
    gap: 8px !important;
  }
  
  .activity-weekdays {
    display: flex !important;
    gap: 4px !important;
    margin-left: 32px;
  }
  
  .activity-day-label {
    width: var(--activity-cell-size);
    font-size: 10px;
    color: #94a3b8;
    font-family: 'JetBrains Mono', monospace;
  }
  
  .activity-weeks {
    display: flex !important;
    gap: 4px !important;
    overflow-x: visible;
  }
  
  .activity-week {
    display: flex !important;
    flex-direction: column !important;
    gap: 4px !important;
  }
  
  .activity-day {
    width: var(--activity-cell-size) !important;
    height: var(--activity-cell-size) !important;
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.2s ease;
    flex-shrink: 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .activity-day:hover {
    transform: scale(1.2);
    box-shadow: 0 0 10px currentColor;
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .activity-day.empty {
    background: transparent !important;
    cursor: default;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .activity-day.empty:hover {
    transform: none;
    box-shadow: none;
  }
  
  .activity-legend {
    display: flex !important;
    align-items: center !important;
    justify-content: flex-end !important;
    gap: 4px !important;
    margin-top: 8px;
  }
  
  .legend-label {
    font-size: 10px;
    color: #64748b;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
  }
  
  .legend-colors {
    display: flex !important;
    gap: 2px !important;
  }
  
  .legend-color {
    width: var(--activity-legend-size);
    height: var(--activity-legend-size);
    border-radius: 2px;
  }

  @media (min-width: 1280px) {
    .activity-calendar {
      --activity-cell-size: 54px;
      --activity-legend-size: 42px;
    }
  }
  
  @media (max-width: 768px) {
    .activity-calendar {
      min-width: 100%;
      --activity-cell-size: 36px;
      --activity-legend-size: 30px;
    }
  }
</style>
