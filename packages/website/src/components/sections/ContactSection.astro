---
import Container from '../ui/Container.astro'
import Section from '../ui/Section.astro'
import CyberCard from '../ui/CyberCard.astro'
import GlitchText from '../ui/GlitchText.astro'
import { Mail, Github, Twitter, MapPin } from 'lucide-react'
---

<Section id="contact" alt={true}>
  <Container>
    <div class="contact-header animate-on-scroll">
      <GlitchText text="INITIATE UPLINK" as="h2" className="section-title" />
      <p class="contact-subtitle">Available for freelance contracts and classified missions.</p>
    </div>
    
    <div class="contact-wrapper animate-on-scroll">
      <CyberCard glowColor="pink" title="TRANSMISSION CHANNELS" className="contact-info">
        <div class="contact-links">
          <a href="mailto:hello@firerlAGI.com" class="contact-link">
            <div class="icon-wrapper">
              <Mail size={20} />
            </div>
            <span class="contact-value font-mono">hello@firerlAGI.com</span>
          </a>
          
          <a href="https://github.com/firerlAGI" target="_blank" rel="noopener noreferrer" class="contact-link">
            <div class="icon-wrapper">
              <Github size={20} />
            </div>
            <span class="contact-value font-mono">@firerlAGI</span>
          </a>
          
          <a href="https://twitter.com/firerlAGI" target="_blank" rel="noopener noreferrer" class="contact-link">
            <div class="icon-wrapper">
              <Twitter size={20} />
            </div>
            <span class="contact-value font-mono">@firerlAGI</span>
          </a>
          
          <div class="contact-link">
            <div class="icon-wrapper">
              <MapPin size={20} />
            </div>
            <span class="contact-value font-mono">Silicon Valley, Sector 7</span>
          </div>
        </div>
      </CyberCard>
      
      <div class="contact-form-wrapper">
        <form 
          class="contact-form" 
          action="https://formspree.io/f/your-form-id" 
          method="POST"
          id="contact-form"
        >
          <div class="form-group">
            <label for="name">IDENTITY</label>
            <input type="text" id="name" name="name" required placeholder="Enter your identity" />
          </div>
          
          <div class="form-group">
            <label for="email">FREQUENCY (EMAIL)</label>
            <input type="email" id="email" name="email" required placeholder="Enter your frequency" />
          </div>
          
          <div class="form-group">
            <label for="message">ENCRYPTED MESSAGE</label>
            <textarea id="message" name="message" rows="5" required placeholder="Enter encrypted message"></textarea>
          </div>
          
          <button type="submit" class="cyber-button">
            <span class="button-text">SEND TRANSMISSION</span>
          </button>
        </form>
      </div>
    </div>
  </Container>
</Section>

<style>
  :global(.contact-header) {
    text-align: center;
    margin-bottom: 64px;
  }

  :global(.section-title) {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: 16px;
    letter-spacing: 0.1em;
    line-height: 1.2;
    color: #00ffff;
    text-shadow: 
      0 0 10px rgba(0, 255, 255, 0.5),
      0 0 20px rgba(0, 255, 255, 0.3),
      0 0 30px rgba(0, 255, 255, 0.2);
  }

  :global(.contact-subtitle) {
    font-size: 1.1rem;
    color: #22d3ee;
    font-family: 'Courier New', monospace;
    letter-spacing: 0.05em;
    margin: 0;
  }

  :global(.contact-wrapper) {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 32px;
    max-width: 1200px;
    margin: 0 auto;
  }

  :global(.contact-info) {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  :global(.contact-links) {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  :global(.contact-link) {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    text-decoration: none;
    border: 1px solid rgba(217, 70, 239, 0.3);
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  :global(.contact-link::before) {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(217, 70, 239, 0.1), transparent);
    transition: left 0.5s;
  }

  :global(.contact-link:hover::before) {
    left: 100%;
  }

  :global(.contact-link:hover) {
    border-color: #d946ef;
    box-shadow: 0 0 20px rgba(217, 70, 239, 0.3);
    transform: translateX(4px);
  }

  :global(.contact-link:hover .icon-wrapper) {
    border-color: #d946ef;
    color: #d946ef;
    box-shadow: 0 0 15px rgba(217, 70, 239, 0.4);
  }

  :global(.icon-wrapper) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid rgba(217, 70, 239, 0.5);
    border-radius: 4px;
    background: rgba(217, 70, 239, 0.1);
    color: #d946ef;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global(.contact-value) {
    font-size: 1rem;
    color: #e2e8f0;
    transition: color 0.3s;
  }

  :global(.contact-link:hover .contact-value) {
    color: #d946ef;
  }

  :global(.contact-form-wrapper) {
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(34, 211, 238, 0.3);
    border-radius: 4px;
    padding: 32px;
    position: relative;
    overflow: hidden;
  }

  :global(.contact-form-wrapper::before) {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 20px 20px;
    pointer-events: none;
  }

  :global(.contact-form) {
    display: flex;
    flex-direction: column;
    gap: 20px;
    position: relative;
    z-index: 1;
  }

  :global(.form-group) {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  :global(.form-group label) {
    font-size: 0.875rem;
    font-weight: 600;
    color: #22d3ee;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: 'Courier New', monospace;
  }

  :global(.form-group input),
  :global(.form-group textarea) {
    padding: 14px 16px;
    font-size: 1rem;
    border: 1px solid rgba(34, 211, 238, 0.3);
    background: rgba(0, 0, 0, 0.5);
    color: #e2e8f0;
    font-family: 'Courier New', monospace;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  :global(.form-group input:focus),
  :global(.form-group textarea:focus) {
    outline: none;
    border-color: #22d3ee;
    box-shadow: 
      0 0 20px rgba(34, 211, 238, 0.3),
      inset 0 0 10px rgba(34, 211, 238, 0.1);
  }

  :global(.form-group input::placeholder),
  :global(.form-group textarea::placeholder) {
    color: rgba(148, 163, 184, 0.6);
  }

  :global(.form-group textarea) {
    resize: vertical;
    min-height: 120px;
  }

  :global(.cyber-button) {
    position: relative;
    padding: 16px 32px;
    background: rgba(34, 211, 238, 0.1);
    border: 1px solid #22d3ee;
    color: #22d3ee;
    font-family: 'Courier New', monospace;
    font-weight: 700;
    font-size: 0.875rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.cyber-button::before) {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(34, 211, 238, 0.3), transparent);
    transition: left 0.5s;
  }

  :global(.cyber-button:hover::before) {
    left: 100%;
  }

  :global(.cyber-button:hover) {
    background: #22d3ee;
    color: #000;
    box-shadow: 
      0 0 20px rgba(34, 211, 238, 0.5),
      0 0 40px rgba(34, 211, 238, 0.3);
    transform: translateY(-2px);
  }

  :global(.cyber-button:active) {
    transform: translateY(0);
  }

  :global(.button-text) {
    position: relative;
    z-index: 1;
  }

  /* Cyber glitch effect for section title */
  @keyframes cyberGlitch {
    0%, 100% {
      text-shadow: 
        0 0 10px rgba(0, 255, 255, 0.5),
        0 0 20px rgba(0, 255, 255, 0.3);
    }
    25% {
      text-shadow: 
        -2px 0 10px rgba(255, 0, 255, 0.5),
        2px 0 10px rgba(0, 255, 255, 0.5);
    }
    50% {
      text-shadow: 
        2px 0 10px rgba(0, 255, 255, 0.5),
        -2px 0 10px rgba(255, 0, 255, 0.5);
    }
    75% {
      text-shadow: 
        -1px 0 10px rgba(255, 0, 255, 0.5),
        1px 0 10px rgba(0, 255, 255, 0.5);
    }
  }

  :global(.section-title:hover) {
    animation: cyberGlitch 0.5s infinite;
  }

  @media (max-width: 768px) {
    :global(.contact-wrapper) {
      grid-template-columns: 1fr;
    }

    :global(.section-title) {
      font-size: 2rem;
    }
  }
</style>
